
var empty = <%= @todos.count %>
if (empty == 1){
  $(".todos").html("<%= escape_javascript render(:partial => 'todo', :locals => { :todo => @todo }) %>");
}
else{
  $(".todos").prepend("<%= escape_javascript render(:partial => 'todo', :locals => { :todo => @todo }) %>");
};
$(".todo-entry").val('');

var status1 = <%= (@todos.to_a == Todo.active_only.where(user_id: current_user.id).to_a) %> ;
$("#active_status_active_only").prop("checked", status1);
var status2 = <%= @todos.to_a == Todo.inactive_only.where(user_id: current_user.id).to_a %> ;
$("#active_status_inactive_only").prop("checked", status2);

arrow_correction();
